{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "es2019",
        "outDir": "./dist",
        "rootDir": ".",
        "declaration": true,
        "strict": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "sourceMap": true,
        "lib": [
            "es2019",
            "es2020.promise",
            "es2020.bigint",
            "es2020.string"
        ]
    },
    "include": [
        "nodes/**/*",
        "credentials/**/*",
        "index.ts"
    ],
    "exclude": [
        "node_modules/**/*",
        "dist/**/*"
    ]
}