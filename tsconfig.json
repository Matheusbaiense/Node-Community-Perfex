{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "es2019",
        "outDir": "./dist",
        "rootDir": ".",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "declaration": true,
        "sourceMap": true,
        "baseUrl": ".",
        "paths": {
            "nodes/*": ["nodes/*"]
        },
        "lib": [
            "es2019"
        ],
        "types": [
            "node"
        ]
    },
    "include": [
        "nodes/**/*",
        "credentials/**/*",
        "package.json"
    ],
    "exclude": [
        "node_modules/**/*",
        "**/*.spec.ts"
    ]
}