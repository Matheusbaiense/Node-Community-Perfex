{
    "compilerOptions": {
      "outDir": "dist",
      "module": "commonjs",
      "target": "es2019",
      "declaration": true,
      "esModuleInterop": true,
      "strict": true,
      "skipLibCheck": true,
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "sourceMap": true,
      "lib": ["es2019", "es2020.promise", "es2020.bigint", "es2020.string"],
      "allowJs": true,
      "checkJs": false,
      "forceConsistentCasingInFileNames": true,
      "isolatedModules": true
    },
    "include": [
      "**/*.ts"
    ],
    "exclude": [
      "node_modules",
      "dist"
    ]
  }