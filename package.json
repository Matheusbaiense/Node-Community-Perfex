{
  "name": "n8n-nodes-perfex-api",
  "version": "0.1.0",
  "description": "n8n community node for Perfex CRM API",
  "type": "module",
  "keywords": [
    "n8n-community-node-package",
    "n8n",
    "perfex",
    "crm"
  ],
  "license": "MIT",
  "homepage": "https://github.com/baien/n8n-nodes-perfex-api",
  "author": {
    "name": "Baien",
    "email": "baien@example.com"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/baien/n8n-nodes-perfex-api.git"
  },
  "engines": {
    "node": ">=18.10",
    "pnpm": ">=9.1"
  },
  "packageManager": "pnpm@9.1.4",
  "main": "dist/nodes/Perfex/Perfex.node.js",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "build": "tsc && gulp build:icons",
    "dev": "tsc --watch",
    "format": "prettier nodes credentials --write",
    "lint": "eslint nodes credentials package.json",
    "lintfix": "eslint nodes credentials package.json --fix",
    "prepublishOnly": "pnpm build && pnpm lint nodes credentials package.json"
  },
  "files": [
    "dist"
  ],
  "n8n": {
    "n8nNodesApiVersion": 1,
    "credentials": [
      "dist/credentials/PerfexApi.credentials.js"
    ],
    "nodes": [
      "dist/nodes/Perfex/Perfex.node.js"
    ]
  },
  "devDependencies": {
    "@typescript-eslint/parser": "^8.32.0",
    "@typescript-eslint/eslint-plugin": "^8.32.0",
    "eslint": "^8.56.0",
    "eslint-plugin-n8n-nodes-base": "^1.16.1",
    "eslint-plugin-jsdoc": "^50.6.11",
    "eslint-config-eslint": "^11.0.0",
    "gulp": "^4.0.2",
    "prettier": "^3.3.2",
    "typescript": "^5.8.3",
    "@eslint/js": "^8.56.0",
    "globals": "^16.0.0"
  },
  "peerDependencies": {
    "n8n-workflow": "*"
  }
}
